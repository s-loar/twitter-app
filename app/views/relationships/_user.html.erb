<div class="row">
  <div class="well well-lg">
    <div class="row">
      <div class="col-md-4">
        <%= user.name %>
      </div>
      <div class="col-md-4">
        <%= pluralize(user.tweets.count, "tweet") %> posted
      </div>
      <div class="col-md-4">
        <button type="button" id="follow-<%= user.id %>" class="btn btn-primary follow-btn pull-right" data-dismiss="modal" data-id="<%= user.id %>">Follow</button>
      </div>
    </div>
  </div>
</div>