<% if user_signed_in? %>
  <%= link_to "New Tweet", new_tweet_path, class: "btn btn-default btn-lg", id: "new-tweet-btn" %>
<% end %>

<% if @tweets.empty? %>
  <h1 id="no-tweets">No Tweets Posted</h1>
<% else %>
  <% @tweets.each do |tweet| %>
    <div class="well well-lg">
      <div class="tweet-body">
        <%= link_to tweet.body, tweet_path(tweet) %>
      </div>
      <div class="author">
        <small>
          Created by: <%= tweet.user.email %> <%= tweet.created_at.strftime("%b %d %Y") %>
        </small>
      </div>
    </div>
  <% end %>
<% end %>